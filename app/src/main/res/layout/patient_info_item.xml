<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/text_view_item_medicine_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_view_item_medicine_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="text_view_item_medicine_name"/>

        <TextView
            android:id="@+id/text_view_item_medicine_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="8dp"
            android:textSize="16sp"
            android:text="text_view_item_medicine_time"/>
    </LinearLayout>


</LinearLayout>